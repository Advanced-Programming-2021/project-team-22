<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="1280.0" styleClass="borderPane"
            stylesheets="@/view/css/LoginMenu.css, @/view/css/General.css"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LoginMenuView">
   <top>
      <HBox prefHeight="254.0" prefWidth="1280.0" BorderPane.alignment="CENTER" />
   </top>
   <right>
      <VBox prefHeight="600.0" prefWidth="300.0" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <VBox alignment="CENTER" prefHeight="368.0" prefWidth="337.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="username" textFill="#1aff00">
               <font>
                  <Font name="XB Shiraz" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="username" promptText="username">
               <VBox.margin>
                  <Insets top="2.0" />
               </VBox.margin></TextField>
            <Label text="nickname" textFill="#1aff00">
               <font>
                  <Font name="XB Shiraz" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="nickname" promptText="nickname">
               <VBox.margin>
                  <Insets top="2.0" />
               </VBox.margin>
            </TextField>
            <Label text="password" textFill="#1aff00">
               <font>
                  <Font name="XB Shiraz" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="invisiblePassword" promptText="password">
               <VBox.margin>
                  <Insets top="2.0" />
               </VBox.margin>
            </PasswordField>
            <TextField fx:id="visiblePassword" managed="false" promptText="password" visible="false">
               <VBox.margin>
                  <Insets top="2.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="26.0" prefWidth="402.0">
               <children>
                  <Button fx:id="signUpButton" mnemonicParsing="false" styleClass="generalButton" text="Sign Up">
                     <font>
                        <Font name="American Typewriter" size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="logInButton" mnemonicParsing="false" styleClass="generalButton" text="Log In">
                     <font>
                        <Font name="American Typewriter" size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="exitGameButton" mnemonicParsing="false" styleClass="generalButton" text="Exit Game">
                     <font>
                        <Font name="American Typewriter" size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
                  <CheckBox fx:id="checkBox" mnemonicParsing="false" prefHeight="26.0" prefWidth="69.0" text="Visible" textFill="#15ff00">
                     <font>
                        <Font name="American Typewriter" size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </CheckBox>
               </children>
               <VBox.margin>
                  <Insets top="7.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="message" textFill="#18d0f0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="15.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
